<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HOMEFUNCTION.AddLost">

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill form for mising item"
        android:layout_centerHorizontal="true" android:layout_marginTop="20dp"
        />

    <ImageButton
        android:id="@+id/addlost_imagebtn"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@android:drawable/ic_input_add"
        android:layout_below="@+id/textview3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_below="@+id/addlost_imagebtn"
        android:id="@+id/addlost_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="lostdate"/>

    <EditText
        android:id="@+id/addlost_des"
        android:layout_below="@+id/addlost_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="description of lost item "/>

    <Button
        android:id="@+id/lost_addbtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="save"
        android:layout_below="@+id/addlost_des"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>